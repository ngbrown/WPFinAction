<Window x:Class="ControlsInAction.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:ControlsInAction"
    Title="LinkLabelWindow" Height="300" Width="300">
    <Grid>
        <TextBox Height="23" Margin="12,12,12,0" Name="textBox1" VerticalAlignment="Top">Manning</TextBox>
        <TextBox Height="23" Margin="12,41,12,0" Name="textBox2" VerticalAlignment="Top">http://www.manning.com/</TextBox>
        <local:LinkLabel Margin="12,70,12,0" Text="{Binding ElementName=textBox1, Path=Text}" Uri="{Binding ElementName=textBox2, Path=Text}" Height="22" VerticalAlignment="Top" />
    </Grid>
</Window>
